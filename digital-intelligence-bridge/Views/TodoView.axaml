                            </ComboBox>

                            <!-- Ê∏ÖÈô§Á≠õÈÄâÊåâÈíÆ -->
                            <Button Grid.Column="3"
                                   Content="Á≠õ"
                                   Command="{Binding ClearFilterCommand}"
                                   Classes="Tertiary"
                                   Padding="8,5"
                                   ToolTip.Tip="Ê∏ÖÈô§Á≠õÈÄâ"/>
                        </Grid>
                    </Grid>
                </Border>

                <Grid Grid.Row="1">
                    <ListBox ItemsSource="{Binding FilteredTodoItems}"
                            SelectedItem="{Binding SelectedTodoItem}"
                            BorderThickness="0"
                            Background="Transparent"
                            Padding="10"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="models:TodoItem">
                                <Border Classes="Card TodoItem"
                                       Classes.completed="{Binding IsCompleted}"
                                       Background="#FCFDFE"
                                       Padding="12"
                                       Margin="0,5">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <CheckBox Grid.Column="0"
                                                 IsChecked="{Binding IsCompleted}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Title}"
                                                      Classes="TodoTitle"
                                                      Classes.completed="{Binding IsCompleted}"
                                                      FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Description}"
                                                      Classes="TodoDescription"
                                                      Classes.completed="{Binding IsCompleted}"
                                                      FontSize="12"
                                                      Opacity="0.7"
                                                      TextTrimming="CharacterEllipsis"
                                                      MaxWidth="350"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                                <Border Background="{Binding Priority, Converter={StaticResource PriorityToBrushConverter}}"
                                                       CornerRadius="3"
                                                       Padding="6,2">
                                                    <TextBlock Text="{Binding Priority}"
                                                              FontSize="10"
                                                              Foreground="White"
                                                              FontWeight="Bold"/>
                                                </Border>
                                                <Border Background="#6c757d"
                                                       CornerRadius="4"
                                                       Padding="6,2">
                                                    <TextBlock Text="{Binding Category}"
                                                              FontSize="10"
                                                              Foreground="White"/>
                                                </Border>
