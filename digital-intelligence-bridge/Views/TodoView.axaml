                                   Spacing="8">
                            <TextBlock Text="üì≠"
                                      FontSize="38"
                                      Opacity="0.25"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="ÊöÇÊó†ÂèØÊòæÁ§∫ÁöÑ‰ªªÂä°"
                                      FontSize="18"
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="ÂèØ‰ª•Âú®Â∑¶‰æßÂàõÂª∫‰ªªÂä°ÔºåÊàñÊ∏ÖÁ©∫Á≠õÈÄâÂêéÊü•ÁúãÂÖ®ÈÉ®„ÄÇ"
                                      FontSize="12"
                                      Foreground="{StaticResource TextMutedBrush}"
                                      HorizontalAlignment="Center"/>
                            <Button Content="Ê∏ÖÁ©∫Á≠õÈÄâ"
                                   IsVisible="{Binding IsTodoFilterEmpty}"
                                   Command="{Binding ClearFilterCommand}"
                                   Classes="Secondary"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>
