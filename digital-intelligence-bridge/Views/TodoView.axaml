                </Border>
                <Border Grid.Column="2" Background="#F4FBF4" BorderBrush="#D8F2DA" BorderThickness="1" CornerRadius="10" Padding="10">
                    <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding CompletedCount}"
