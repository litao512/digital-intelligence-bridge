                                                          IsVisible="{Binding IsOverdue}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <Button Grid.Column="2"
                                               Content="Âà†Èô§"
                                               Command="{Binding #Root.((vm:MainWindowViewModel)DataContext).DeleteTodoCommand}"
                                               CommandParameter="{Binding}"
