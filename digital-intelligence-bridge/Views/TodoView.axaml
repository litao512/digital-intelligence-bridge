    <UserControl.Styles>
        <Style Selector="TextBlock.StatisticNumber">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style Selector="TextBlock.TodoTitle.completed">
            <Setter Property="TextDecorations" Value="Strikethrough"/>
            <Setter Property="Opacity" Value="0.55"/>
        </Style>
        <Style Selector="TextBlock.TodoDescription.completed">
            <Setter Property="Opacity" Value="0.45"/>
        </Style>
        <Style Selector="Border.TodoItem.completed">
            <Setter Property="Opacity" Value="0.82"/>
        </Style>
    </UserControl.Styles>

    <Grid ColumnDefinitions="320,*" ColumnSpacing="14">
