                    </StackPanel>

                    <StackPanel Spacing="4">
                        <TextBlock Text="‰ºòÂÖàÁ∫ß" FontSize="12" Opacity="0.8"/>
                        <ComboBox SelectedIndex="{Binding SelectedPriorityIndex}"
                                 HorizontalAlignment="Stretch"
                                 Height="35">
                            <ComboBoxItem>‰Ωé</ComboBoxItem>
                            <ComboBoxItem>‰∏≠</ComboBoxItem>
                            <ComboBoxItem>È´ò</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Spacing="4">
                        <TextBlock Text="ÂàÜÁ±ª" FontSize="12" Opacity="0.8"/>
                        <ComboBox SelectedItem="{Binding SelectedCategory}"
                                 ItemsSource="{Binding Categories}"
