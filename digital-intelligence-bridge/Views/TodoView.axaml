                <Border Grid.Column="3" Background="#FFF5F4" BorderBrush="#FFD9D3" BorderThickness="1" CornerRadius="10" Padding="10">
                    <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding OverdueCount}"
                              FontSize="20" FontWeight="Bold"
                              Foreground="{StaticResource DangerBrush}"
                              HorizontalAlignment="Center"
                              Classes="StatisticNumber"/>
                    <TextBlock Text="Â∑≤ÈÄæÊúü"
                              FontSize="12" Opacity="0.7"
                              HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Â∑¶‰æßÔºöËæìÂÖ•Ë°®Âçï -->
        <Border Grid.Row="1" Grid.Column="0"
                Classes="Card"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Padding="15"
                Margin="0,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="12">
                    <TextBlock Text="Ê∑ªÂä†Êñ∞‰ªªÂä°" FontWeight="Bold" FontSize="16"/>

